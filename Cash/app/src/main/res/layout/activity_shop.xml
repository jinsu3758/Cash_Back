<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130.7dp"
        android:background="@color/white"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/shop_layout_coffee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:gravity="center">

        <ImageView
            android:layout_width="62.7dp"
            android:layout_height="62.7dp"
            android:id="@+id/shop_im_coffee"/>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.7sp"
                android:textColor="@color/black"
                android:text="커피"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_layout_bakery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25.3dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/shop_im_bakery"
                android:layout_width="62.7dp"
                android:layout_height="62.7dp"
                />
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.7sp"
                android:textColor="@color/black"
                android:text="베이커리"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_layout_desert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25.3dp"
            android:gravity="center">

            <ImageView
                android:layout_width="62.7dp"
                android:layout_height="62.7dp"
                android:id="@+id/shop_im_desert"/>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.7sp"
                android:textColor="@color/black"
                android:text="디저트"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_layout_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25.3dp"
            android:gravity="center">

            <ImageView
                android:layout_width="62.7dp"
                android:layout_height="62.7dp"
                android:id="@+id/shop_im_more"/>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.7sp"
                android:textColor="@color/black"
                android:text="더보기"/>

        </LinearLayout>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="7.7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shop_recycler">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>