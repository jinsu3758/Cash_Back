<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:fitsSystemWindows="true"
    android:background="@drawable/back_login"
    >

    <ScrollView
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_im_logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="55dp"
                android:layout_gravity="center"
                />

            <RelativeLayout
                android:layout_width="327dp"
                android:layout_height="45dp"
                android:background="@drawable/border_edit_login"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/login_im_edit1"
                    android:layout_width="15dp"
                    android:layout_height="14dp"
                    android:src="@drawable/user"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/login_edit_id"
                android:layout_width="327dp"
                android:singleLine="true"
                android:layout_height="45dp"
                android:paddingLeft="8dp"
                android:textSize="12sp"
                android:hint="@string/username"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@color/transparent"
                android:layout_toRightOf="@id/login_im_edit1"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="327dp"
                android:layout_height="45dp"
                android:background="@drawable/border_edit_login"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/login_im_edit2"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:src="@drawable/lock"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/login_edit_pw"
                    android:layout_width="327dp"
                    android:textColor="@color/white"
                    android:layout_height="45dp"
                    android:paddingLeft="12dp"
                    android:textSize="12sp"
                    android:hint="@string/pw"
                    android:inputType="textPassword"
                    android:textColorHint="@color/white"
                    android:background="@color/transparent"
                    android:layout_toRightOf="@id/login_im_edit2"
                    />
            </RelativeLayout>


            <Button
                android:id="@+id/login_btn_login"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="327dp"
                android:layout_height="45dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/border_btn_login"/>
            <Button
                android:id="@+id/login_btn_sign"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="327dp"
                android:layout_height="45dp"
                android:text="@string/sign"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/border_btn_register"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="@string/forget_pw"
                android:layout_marginTop="30dp"
                />



        </LinearLayout>
    </ScrollView>
</FrameLayout>